{
	"compilerOptions": {
		"outDir": "dist",
		"declaration": true,
		"module": "commonjs",
		"target": "es5",
		"lib": ["es6"],
		"sourceMap": false,
		"moduleResolution": "node",
		"rootDir": "src",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
	},
	"exclude": [
		"node_modules",
		"dist",
	],
}
